{
  "name": "전역일 계산기",
  "description": "심플한 디자인의 위젯형 전역일 계산기입니다.",
  "version": "1.0.0",
  "manifest_version": 2,
  "icons": {
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "browser_action": {
    "default_title": "전역일 계산기",
    "default_popup": "popup/popup.html"
  },
  "permissions": ["storage", "notifications"],
  "background": {
    "scripts": ["background.js"]
  }
}
